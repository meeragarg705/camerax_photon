<resources>

    <declare-styleable name="HorizontalPicker">
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
        <attr name="values" format="reference"/>
        <attr name="android:ellipsize"/>
        <attr name="android:marqueeRepeatLimit"/>
        <attr name="dividerSize" format="dimension"/>
        <attr name="sideItems" format="integer"/>
        <attr name="selectedColor" format="reference|color"/>

    </declare-styleable>
    <attr name="horizontalPickerStyle" format="reference"/>

    <declare-styleable name="UniversalSeekBarPreference">
        <attr name="minValue" format="float"/>
        <attr name="maxValue" format="float"/>
        <attr name="stepPerUnit" format="float"/>
        <attr name="isFloat" format="boolean"/>
        <attr name="showSeekBarValue" format="boolean"/>
    </declare-styleable>

    <attr name="cameraFragmentBackground" format="reference"/>

    <declare-styleable name="FlashButtonStates">
        <attr name="flash_off" format="boolean"/>
        <attr name="flash_on" format="boolean"/>
        <attr name="flash_auto" format="boolean"/>
        <attr name="flash_torch" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="FocusCircleView">
        <attr name="focused_locked" format="boolean"/>
        <attr name="unfocused_locked" format="boolean"/>
        <attr name="android:color" format="reference|color"/>
        <attr name="android:thickness" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TimerButtonStates">
        <attr name="timer_off" format="boolean"/>
        <attr name="timer_3s" format="boolean"/>
        <attr name="timer_10s" format="boolean"/>
    </declare-styleable>

</resources>